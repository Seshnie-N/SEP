@model SEP.Models.ViewModels.EmployerProfileViewModel
@using SEP.Models.Enums

@{
	ViewData["Title"] = "Please complete your profile";
}
<div class="row">
	<div class="mx-auto col-10 col-md-8 col-lg-6">
		<h1>Personal Details</h1>
		<form method="post" asp-action="CreateEmployer">

			<input asp-for="@Model.Employer.UserId" hidden />
			<input asp-for="@Model.User" hidden />
			<input asp-for="@Model.Employer.isApproved" hidden />

			<div class="form-floating pb-3">
				<input asp-for="@Model.Employer.Title" class="form-control" />
				<label asp-for="@Model.Employer.Title" class="col-sm-auto col-form-label">Title</label>
				<span asp-validation-for="@Model.Employer.Title" class="text-danger"></span>
			</div>

			<div class="form-floating pb-3">
				<input asp-for="@Model.User.FirstName" class="form-control" />
				<label asp-for="@Model.User.FirstName" class="col-sm-auto col-form-label">First name</label>
				<span asp-validation-for="@Model.User.FirstName" class="text-danger"></span>
			</div>

			<div class="form-floating pb-3">
				<input asp-for="@Model.User.LastName" class="form-control" />
				<label asp-for="@Model.User.LastName" class="col-sm-auto col-form-label">Last name</label>
				<span asp-validation-for="@Model.User.LastName" class="text-danger"></span>
			</div>

			<div class="form-floating pb-3">
				<input asp-for="@Model.User.PhoneNumber" class="form-control" />
				<label asp-for="@Model.User.PhoneNumber" class="col-sm-auto col-form-label">Phone number</label>
				<span asp-validation-for="@Model.User.PhoneNumber" class="text-danger"></span>
			</div>

			<div class="form-floating pb-3">
				<input asp-for="@Model.User.Email" class="form-control" />
				<label asp-for="@Model.User.Email" class="col-sm-auto col-form-label">Email</label>
				<span asp-validation-for="@Model.User.Email" class="text-danger"></span>
			</div>

			<div class="form-floating pb-3">
				<input asp-for="@Model.Employer.JobTitle" class="form-control" />
				<label asp-for="@Model.Employer.JobTitle" class="col-sm-auto col-form-label">Job Title</label>
				<span asp-validation-for="@Model.Employer.JobTitle" class="text-danger"></span>
			</div>

			<div class="pb-3">
				<label asp-for="@Model.Employer.isInternal">Are you a wits employee?</label>
				<div class="form-check-inline">
					<input type="radio" asp-for="@Model.Employer.isInternal" id="Emp" value="true" />
					<label>Yes</label>
				</div>
				<div class="form-check-inline">
					<input type="radio" asp-for="@Model.Employer.isInternal" id="NotEmp" value="false" />
					<label>No</label>
				</div>
				<span asp-validation-for="@Model.Employer.isInternal" class="text-danger"></span>
			</div>

			<div class="form-floating pb-3">
				<input asp-for="@Model.Employer.CompanyRegistrationNumber" class="form-control" />
				<label asp-for="@Model.Employer.CompanyRegistrationNumber" class="col-sm-auto col-form-label">Company Registration Number</label>
				<span asp-validation-for="@Model.Employer.CompanyRegistrationNumber" class="text-danger"></span>
			</div>

			<div class="form-floating pb-3">
				<input asp-for="@Model.Employer.BusinessName" class="form-control" />
				<label asp-for="@Model.Employer.BusinessName" class="col-sm-auto col-form-label">Registered Business Name</label>
				<span asp-validation-for="@Model.Employer.BusinessName" class="text-danger"></span>
			</div>

			<div class="form-floating pb-3">
				<input asp-for="@Model.Employer.TradingName" class="form-control" />
				<label asp-for="@Model.Employer.TradingName" class="col-sm-auto col-form-label">Trading Name</label>
				<span asp-validation-for="@Model.Employer.TradingName" class="text-danger"></span>
			</div>

			<div class="form-floating pb-3">
				<input asp-for="@Model.Employer.Address" class="form-control" />
				<label asp-for="@Model.Employer.Address" class="col-sm-auto col-form-label">Address</label>
				<span asp-validation-for="@Model.Employer.Address" class="text-danger"></span>
			</div>

			<div class="form-floating pb-3">
				<select class="form-select" asp-for="@Model.Employer.BusinessType" asp-items="@Html.GetEnumSelectList<BusinessType>()">
					<option value="">Select...</option>
				</select>
				<label asp-for="@Model.Employer.BusinessType"></label>
			</div>

			<button type="submit" class="btn btn-primary">Save</button>
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
