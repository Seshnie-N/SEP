@model SEP.Models.DomainModels.Qualification

@{
    ViewData["Title"] = "EditQualification";
}

<h1>Qualification</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ViewQualification">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="QualificationId" />
            <input type="hidden" asp-for="StudentId" />
            <div class="form-group">
                <label asp-for="Institution" class="control-label"></label>
                <input asp-for="Institution" class="form-control" />
                <span asp-validation-for="Institution" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input type="date" asp-for="StartDate" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input type="date" asp-for="EndDate" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QualificationName" class="control-label"></label>
                <input asp-for="QualificationName" class="form-control" />
                <span asp-validation-for="QualificationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subjects" class="control-label"></label>
                <input asp-for="Subjects" class="form-control" />
                <span asp-validation-for="Subjects" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Majors" class="control-label"></label>
                <input asp-for="Majors" class="form-control" />
                <span asp-validation-for="Majors" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubMajors" class="control-label"></label>
                <input asp-for="SubMajors" class="form-control" />
                <span asp-validation-for="SubMajors" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Research" class="control-label"></label>
                <input asp-for="Research" class="form-control" />
                <span asp-validation-for="Research" class="text-danger"></span>
            </div>
            <div class="form-group pt-2">
                <button type="submit" class="btn btn-primary" asp-action="EditQualification">Save Changes</button>
                <button type="submit" class="btn btn-danger" asp-action="DeleteQualification">Delete</button>
            </div>
        </form>
    </div>
</div>

<div class="pt-2">
    <a class="btn btn-primary" asp-action="UpdateStudent">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
