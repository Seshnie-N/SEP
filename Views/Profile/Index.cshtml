@model SEP.Models.DomainModels.Student
@{
	ViewData["Title"] = "Profile";
}

<h1>Personal Details</h1>

<form method="post" asp-action="Index">

    <input asp-for="UserId" /> 

    <div class="form-floating pb-3">
        <input asp-for="StudentNumber" class="form-control" />
        <label asp-for="StudentNumber" class="col-sm-auto col-form-label">Student Number</label>
        <span asp-validation-for="StudentNumber" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Save</button>
</form>