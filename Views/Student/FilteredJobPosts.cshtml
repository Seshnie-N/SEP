@model IEnumerable<SEP.Models.ViewModels.StudentPostViewModel>

@{
    ViewData["Title"] = "Job Posts";
}

<h1>Job Posts</h1>
@if (Model.Count() == 0)
{
    <caption>No Relevant Job Posts Found</caption>
} else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.JobTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DepartmentName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.JobType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PartTimeHour)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HourlyRate)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.JobTitle
                    </td>
                    <td>
                        @item.DepartmentName
                    </td>
                    <td>
                        @item.JobType
                    </td>
                    <td>
                        @item.PartTimeHour
                    </td>
                    <td>
                        @item.StartDate.ToString("d")
                    </td>
                    <td>
                        @item.EndDate.ToString("d")
                    </td>
                    <td>
                        @item.HourlyRate
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Post" asp-action="Details" asp-route-id="@item.PostId">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<div class="pt-3">
    <a class="btn btn-primary" asp-controller="Home" asp-action="StudentHome">Back</a>
</div>
