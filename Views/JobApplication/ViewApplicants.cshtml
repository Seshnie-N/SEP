@model SEP.Models.ViewModels.ViewApplicantsViewModel
@{
}
<h1>Applicants</h1>
<hr />
<div>
    <p><b>@Html.DisplayNameFor(model => model.JobTitle):</b> @Model.JobTitle</p>
    <p><b>@Html.DisplayNameFor(model => model.JobDescription):</b> @Model.JobDescription</p>
</div>
@if (Model.Applications.Count() == 0)
{
    <caption>No Applicants for Selected Job Post</caption>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Department
                </th>
                <th>
                    Course
                </th>
                <th>
                    Level
                </th>
                <th>
                    Gender
                </th>
                <th>
                    Status
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Applications)
            {
                <tr>
                    <td>
                        @item.Student.User.FirstName
                    </td>
                    <td>
                        @item.Student.User.LastName
                    </td>
                    <td>
                        @item.Student.Faculty
                    </td>
                    <td>
                        @item.Student.Department
                    </td>
                    <td>
                        @item.Student.YearOfStudy
                    </td>
                    <td>
                        @item.Student.Gender
                    </td>
                    <td>
                        @item.Status
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-controller="JobApplication" asp-action="ViewApplicantDetails" asp-route-id="@item.ApplicationId">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<div class="pt-3">
    <a class="btn btn-primary" asp-controller="Post" asp-action="Update" asp-route-id="@Model.PostId">Back</a>
</div>